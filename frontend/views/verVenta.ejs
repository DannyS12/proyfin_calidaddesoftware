<!-- Encabezado tipo Dashboard -->
<div class="d-flex align-items-center justify-content-between mb-4">
  <div>
    <h1 class="h3 mb-1">Ventas Realizadas</h1>
    <p class="text-muted mb-0">Resumen de ventas con acciones rápidas</p>
  </div>
  <div>
    <a href="/createVenta" class="btn btn-primary">
      <i class="bi bi-plus-circle me-1"></i> Nueva Venta
    </a>
  </div>
</div>

<!-- Tabla dentro de tarjeta -->
<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th>ID Venta</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Forma de Pago</th>
            <th class="text-end">Total (Q)</th>
            <th class="text-end">Anticipo (Q)</th>
            <th class="text-end">Descuento (Q)</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (venta && venta.length) { %>
            <% venta.forEach(v => { %>
              <tr>
                <td><%= v.IdVenta %></td>
                <td><%= v.Fecha ? new Date(v.Fecha).toLocaleDateString('es-GT', { day:'2-digit', month:'2-digit', year:'numeric', hour:'2-digit', minute:'2-digit' }) : '—' %></td>
                <td><%= v.ClienteNombre || '—' %></td>
                <td><%= v.FormaPago %></td>
                <td class="text-end fw-semibold">Q <%= Number(v.Total).toFixed(2) %></td>
                <td class="text-end text-success">Q <%= Number(v.Anticipo || 0).toFixed(2) %></td>
                <td class="text-end text-danger">Q <%= Number(v.Descuento || 0).toFixed(2) %></td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <a href="/generarFactura/<%= v.IdVenta %>" class="btn btn-sm btn-outline-primary" title="Generar Factura">
                      <i class="fas fa-receipt"></i>
                    </a> 
                    <!-- <a href="/verFactura/<%= v.IdVenta %>" class="btn btn-sm btn-outline-primary" title="Ver Factura">
  <i class="bi bi-receipt"></i>
</a> -->
                    <!-- <a href="/detalleVenta/<%= v.IdVenta %>" class="btn btn-sm btn-outline-secondary" title="Ver Detalle">
                      <i class="fas fa-eye"></i>
                    </a> -->
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="8" class="text-center text-muted py-3">No hay ventas registradas.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>