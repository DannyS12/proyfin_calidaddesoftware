<!-- Encabezado tipo Dashboard -->
<div class="d-flex align-items-center justify-content-between mb-4">
  <div>
    <h1 class="h3 mb-1">Lista de Pagos</h1>
    <p class="text-muted mb-0">Consulta, edita o elimina los registros de pagos realizados</p>
  </div>
  <div>
    <a href="/createPago" class="btn btn-primary">
      <i class="bi bi-plus-circle me-1"></i> Agregar Pago
    </a>
  </div>
</div>

<!-- Tabla dentro de tarjeta -->
<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th>ID Pago</th>
            <th>ID Venta</th>
            <th>Fecha</th>
            <th>Forma de Pago</th>
            <th>Monto (Q)</th>
            <th>Saldo Pendiente (Q)</th>
            <th>Banco</th>
            <th>N° Referencia</th>
            <th>Usuario</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (data && data.length > 0) { %>
            <% data.forEach(pago => { %>
              <tr>
                <td><%= pago.IdPago %></td>
                <td><%= pago.IdVenta %></td>
                <td><%= new Date(pago.Fecha).toLocaleDateString('es-GT', { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                <td><%= pago.FormaPago %></td>
                <td class="text-end fw-semibold text-success">Q <%= Number(pago.Monto).toFixed(2) %></td>
                <td class="text-end <%= pago.SaldoPendiente > 0 ? 'text-danger fw-semibold' : 'text-muted' %>">
                  Q <%= Number(pago.SaldoPendiente).toFixed(2) %>
                </td>
                <td><%= pago.IdBanco || '—' %></td>
                <td><%= pago.NumeroReferencia || '—' %></td>
                <td><%= pago.IdUsuario %></td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <a href="/editPago/<%= pago.IdPago %>" class="btn btn-sm btn-warning" title="Editar">
                      <i class="fas fa-pencil-square"></i>
                    </a>
                    <form action="/deletePago/<%= pago.IdPago %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-sm btn-danger" title="Eliminar"
                        onclick="return confirm('¿Estás seguro de que deseas eliminar este pago?')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="10" class="text-center text-muted py-3">
                No hay pagos registrados.
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>