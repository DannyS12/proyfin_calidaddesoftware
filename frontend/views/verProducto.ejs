<!-- Encabezado tipo Dashboard -->
<div class="d-flex align-items-center justify-content-between mb-4">
  <div>
    <h1 class="h3 mb-1">Lista de Productos</h1>
    <p class="text-muted mb-0">Consulta, edita o elimina los productos registrados</p>
  </div>
  <div>
    <a href="/createProducto" class="btn btn-primary">
      <i class="bi bi-plus-circle me-1"></i> Agregar Producto
    </a>
  </div>
</div>

<!-- Tabla dentro de tarjeta -->
<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Categoría</th>
            <th>Código</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio (Q)</th>
            <th>Impuestos (%)</th>
            <th>N° Serie</th>
            <th>Stock</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (data && data.length > 0) { %>
            <% data.forEach(producto => { %>
              <tr>
                <td><%= producto.IdProd %></td>
                <td><%= producto.CategoriaNombre || producto.IdCategoria %></td>
                <td><%= producto.CodigoProducto %></td>
                <td><%= producto.Nombre %></td>
                <td><%= producto.Descripcion %></td>
                <td class="text-end text-success fw-semibold">Q <%= Number(producto.Precio).toFixed(2) %></td>
                <td class="text-center"><%= Number(producto.Impuestos).toFixed(2) %> %</td>
                <td><%= producto.NumeroSerie || '—' %></td>
                <td class="text-end fw-bold"><%= producto.Stock %></td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <!-- Editar -->
                    <a href="/editProducto/<%= producto.IdProd %>" class="btn btn-sm btn-warning" title="Editar">
                      <i class="fas fa-pencil-square"></i>
                    </a>
                    <!-- Eliminar -->
                    <form action="/deleteProducto/<%= producto.IdProd %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-sm btn-danger" title="Eliminar"
                              onclick="return confirm('¿Estás seguro de eliminar este producto?')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="10" class="text-center text-muted py-3">
                No hay productos registrados.
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>