<!-- Encabezado tipo Dashboard -->
<div class="d-flex align-items-center justify-content-between mb-4">
  <div>
    <h1 class="h3 mb-1">Crear Banco</h1>
    <p class="text-muted mb-0">Registra un nuevo banco en el sistema</p>
  </div>
  <div>
    <a href="/verBanco" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
  </div>
</div>

<!-- Formulario -->
<div class="card shadow-sm">
  <div class="card-body">
    <form id="bancoForm" action="/createBanco" method="POST" novalidate>
      <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre</label>
        <input
          type="text"
          class="form-control"
          id="Nombre"
          name="Nombre"
          required
          minlength="3"
          maxlength="50"
          pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+"
          placeholder="Ej. Banco Central"
        />
        <div class="invalid-feedback">
          Por favor ingresa un nombre válido (solo letras y espacios, mínimo 3 caracteres).
        </div>
      </div>

      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-save me-1"></i> Guardar
        </button>
        <a href="/verBanco" class="btn btn-secondary">
          Cancelar
        </a>
      </div>
    </form>
  </div>
</div>

<!-- Validación Bootstrap -->
<script>
  (function () {
    'use strict';
    const form = document.getElementById('bancoForm');
    form.addEventListener('submit', function (event) {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
    }, false);
  })();
</script>