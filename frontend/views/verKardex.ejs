<!-- Encabezado tipo Dashboard -->
<div class="d-flex align-items-center justify-content-between mb-4">
  <div>
    <h1 class="h3 mb-1">Lista de Kardex</h1>
    <p class="text-muted mb-0">Consulta el historial de existencias y movimientos de productos</p>
  </div>
  <div>
    <a href="/createKardex" class="btn btn-primary">
      <i class="bi bi-plus-circle me-1"></i> Agregar Kardex
    </a>
  </div>
</div>

<!-- Tabla dentro de tarjeta -->
<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Producto</th>
            <th>Cantidad Inicial</th>
            <th>Cantidad Vendida</th>
            <th>Cantidad Recibida</th>
            <th>Cantidad Existente</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (kardexList && kardexList.length > 0) { %>
            <% kardexList.forEach(kardex => { %>
              <tr>
                <td><%= kardex.Id %></td>
                <td><%= kardex.NombreProducto || '—' %></td>
                <td class="text-end"><%= kardex.CantidadInicial %></td>
                <td class="text-end text-danger fw-semibold"><%= kardex.CantidadVendida %></td>
                <td class="text-end text-success fw-semibold"><%= kardex.CantidadRecibida %></td>
                <td class="text-end fw-bold"><%= kardex.CantidadExistente %></td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <a href="/editKardex/<%= kardex.Id %>" class="btn btn-sm btn-warning" title="Editar">
                      <i class="fas fa-pencil-square"></i>
                    </a>
                    <form action="/deleteKardex/<%= kardex.Id %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-sm btn-danger" title="Eliminar"
                              onclick="return confirm('¿Estás seguro de eliminar este registro de Kardex?')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center text-muted py-3">
                No hay registros en el Kardex.
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>