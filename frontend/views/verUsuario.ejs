<!-- Encabezado tipo Dashboard -->
<div class="d-flex align-items-center justify-content-between mb-4">
  <div>
    <h1 class="h3 mb-1">Lista de Usuarios</h1>
    <p class="text-muted mb-0">Administra las cuentas de usuario del sistema</p>
  </div>
  <div>
    <a href="/createUsuario" class="btn btn-primary">
      <i class="bi bi-plus-circle me-1"></i> Agregar Usuario
    </a>
  </div>
</div>

<!-- Tabla dentro de tarjeta -->
<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Rol</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Registro</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (data && data.length > 0) { %>
            <% data.forEach(usuario => { %>
              <tr>
                <td><%= usuario.IdUsuario %></td>
                <td><%= usuario.NombreUsuario %></td>
                <td>
                  <span class="badge bg-<%= usuario.Rol === 'Administrador' ? 'danger' : (usuario.Rol === 'Vendedor' ? 'primary' : (usuario.Rol === 'Cajero' ? 'warning text-dark' : 'secondary')) %>">
                    <%= usuario.Rol %>
                  </span>
                </td>
                <td><%= usuario.Nombre %></td>
                <td><%= usuario.Apellido %></td>
                <td><%= usuario.Email %></td>
                <td><%= usuario.Telefono %></td>
                <td><%= usuario.FechaRegistro ? new Date(usuario.FechaRegistro).toLocaleDateString('es-GT', { day:'2-digit', month:'2-digit', year:'numeric' }) : '—' %></td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <a href="/editUsuario/<%= usuario.IdUsuario %>" class="btn btn-sm btn-warning" title="Editar">
                      <i class="fas fa-pencil-square"></i>
                    </a>
                    <form action="/deleteUsuario/<%= usuario.IdUsuario %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-sm btn-danger" title="Eliminar"
                              onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="9" class="text-center text-muted py-3">No hay usuarios registrados.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>